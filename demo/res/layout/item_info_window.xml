<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:paddingTop="5dp" android:paddingBottom="5dp"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_says_hello"
            android:id="@+id/tvPerson" android:layout_gravity="center_horizontal" android:paddingRight="5dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivPerson" android:layout_gravity="center_horizontal"
            android:src="@drawable/stefan" android:cropToPadding="false"
            />
</LinearLayout>